<?xml version="1.0" encoding="UTF-8"?>

<ehcache:config
        xmlns:ehcache="http://www.ehcache.org/v3"
>
    <ehcache:cache alias="currency">
        <ehcache:expiry>
            <ehcache:ttl unit="minutes">40</ehcache:ttl>
        </ehcache:expiry>
        <ehcache:heap unit="entries">2</ehcache:heap>
    </ehcache:cache>

    <ehcache:cache alias="currency_quote">
        <ehcache:expiry>
            <ehcache:ttl unit="minutes">2</ehcache:ttl>
        </ehcache:expiry>
        <ehcache:heap unit="entries">2</ehcache:heap>
    </ehcache:cache>

</ehcache:config>
